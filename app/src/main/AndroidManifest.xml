<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_media_player">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMediaPlayer">
        <activity
            android:name=".VideoPlayer.VideoActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MusicPlayer.MusicActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".MusicPlayer.PlayNotificationReceiver" />
        <receiver android:name=".MusicPlayer.PrevSongNotificationReceiver" />
        <receiver android:name=".MusicPlayer.NextSongNotificationReceiver" />
    </application>

</manifest>