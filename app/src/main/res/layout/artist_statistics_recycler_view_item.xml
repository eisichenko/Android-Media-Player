<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="?attr/main_background_color"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statsArtistNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name: qwe"
        android:textColor="?attr/main_text_color"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/popularityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popularity: 123123123.123"
        android:textColor="?attr/main_text_color"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/numberOfSongsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of songs: qwe"
        android:textColor="?attr/main_text_color"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/totalTimeListenedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total time listened: 03h:52m:03s (16.70%)"
        android:textColor="?attr/main_text_color"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="2dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/statsTotalLaunchTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launches: 254"
            android:textColor="?attr/main_text_color"
            android:textSize="12sp"
            android:gravity="start"
            android:layout_weight="60"/>

        <TextView
            android:id="@+id/listenedTimePerLaunchTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Played time per launch: 03h:52m:03s"
            android:textColor="?attr/main_text_color"
            android:textSize="12sp"
            android:gravity="end"
            android:layout_weight="40"/>

    </LinearLayout>

</LinearLayout>